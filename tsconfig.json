{
  "compilerOptions": {
    "noImplicitAny": true,
		"target": "es5",
		"allowJs": true,
		"sourceMap": true,
		"lib": [
			"es5",
			"es2015",
		],
		"allowSyntheticDefaultImports": true,
		"outDir": "server/build"
  },
  "include": [
		"server/src/**/*",
	],
	"exclude": [
		"node_modules"
	],
	"typeRoots": ["server/src/typings"]
}
